# .env file

# CoinMarketCap API Key
# Get your free API key from https://coinmarketcap.com/api/
REACT_APP_CMC_API_KEY=your_api_key_here
CMC_API_KEY=your_api_key_here

# Telegram Bot Configuration
# Get your bot token from BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Server Port
PORT=3001

# Target Price Ratio (default: 0.55)
# Set this to the percentage of Puffer price below which
# Carrot price should trigger an alert
PRICE_RATIO=0.55

# Check Interval (minutes)
DEFAULT_CHECK_INTERVAL=5